<div class='container'>
    <h2>Send an Arrow</h2>

    <%= form_for(@arrow) do |f| %>
    <div class='form-group'>
        <div class="field mb-3">
            <%= f.label :destination %><br />
            <div class='autocomplete'>
                <%= f.text_field :destination, autocomplete: "destination", :class => 'form-control', :id => 'auto-complete', :data => {name: @users_name} %>
            </div>
        </div>

        <div class="field mb-3">
            <%= f.label :reason %><br />
            <%= f.text_area :reason, autocomplete: "reason", size: '20x5', :class => 'form-control' %>
        </div>

        <div class="btn-group mt-2" role="group" aria-label="Buttons">
            <div class="actions">
                <%= f.submit "Send arrow", :class => 'btn btn-dark mr-2' %>
            </div>

            <%= link_to "Back", arrows_path, :class => 'btn btn-dark' %>
        </div>
    </div>
    <% end %>
</div>