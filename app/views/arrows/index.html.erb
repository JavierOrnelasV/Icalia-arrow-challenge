<div class='container-fluid'>
    <div class='row mb-5'>
    </div>

    <div class='row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 row-cols-xl-4'>
        <div>
            <div class='text-center py-5'>
                <%= link_to 'Create an Arrow', new_arrow_path, :class => 'btn btn-dark btn-lg mx-auto' %>
            </div>
        </div>
        <% @arrows.each do |arrow| %>
        <div>
            <div class="card mb-4 mx-sm-2 mx-xl-5">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted mb-2"><%= arrow.created_at.strftime('%d %b %Y') %></h6>
                    <p class="card-text">From: <%= arrow.creator.name %></p>
                    <a href="#" class="btn btn-primary">See arrow</a>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>